@model Friendface.Core.Domain.Post
@{
    Layout = "_Layout";
}

<div class="container">
    <h3>New post</h3>
    <hr />

    @using (Html.BeginForm("CreatePost", "Friendface", FormMethod.Post))
    {
    <dl class="dl-horizontal">
        @Html.HiddenFor(x => x.AuthorId)

        <dt>@Html.DisplayNameFor(model => model.Title)</dt>
        <dd>@Html.TextBoxFor(m => m.Title) @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" })</dd>

        <dt>@Html.DisplayNameFor(model => model.Content)</dt>
        <dd>@Html.TextAreaFor(m => m.Content) @Html.ValidationMessageFor(model => model.Content, null, new { @class = "text-danger" })</dd>
    </dl>

        <button type="submit" class="btn btn-secondary">Post</button>
    }
</div>