@model Friendface.Web.Models.ChangeProfileModel
@{
    Layout = "_Layout";
}

<div class="container">
    <h3>Edit profile</h3>
    <hr />
    @using (Html.BeginForm("ChangeProfile", "Friendface", FormMethod.Post))
    {
        <dl class="dl-horizontal">
            @Html.HiddenFor(m => m.Id)
            <dt>@Html.DisplayNameFor(model => model.Username)</dt>
            <dd>@Html.TextBoxFor(m => m.Username)</dd>

            <dt>@Html.DisplayNameFor(model => model.Password)</dt>
            <dd>@Html.PasswordFor(m => m.Password)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.TextBoxFor(m => m.Email) @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })</dd>

            <dt>@Html.DisplayNameFor(model => model.Address)</dt>
            <dd>@Html.TextBoxFor(m => m.Address)</dd>

            <dt>@Html.DisplayNameFor(model => model.Gender)</dt>
            <dd>@Html.TextBoxFor(m => m.Gender)</dd>

            <dt>@Html.DisplayNameFor(model => model.Birthday)</dt>
            <dd>@Html.TextBoxFor(m => m.Birthday, "{0:yyyy-MM-dd}") @Html.ValidationMessageFor(model => model.Birthday, null, new { @class = "text-danger" })</dd>

            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.TextBoxFor(m => m.Description) @Html.ValidationMessageFor(model => model.Description)</dd>
        </dl>

        <button type="submit" class="btn btn-secondary">Save changes</button>
    }
</div>