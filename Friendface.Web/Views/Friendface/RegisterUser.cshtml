@model Friendface.Core.Domain.User
@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Registration</h2>

    @using (Html.BeginForm("RegisterUser", "Friendface", FormMethod.Post))
    {
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Username)</dt>
        <dd>@Html.TextBoxFor(m => m.Username) @Html.ValidationMessageFor(model => model.Username, null, new { @class = "text-danger" })</dd>

        <dt>@Html.DisplayNameFor(model => model.Password)</dt>
        <dd>@Html.PasswordFor(m => m.Password) @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.TextBoxFor(m => m.Email) @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })</dd>

        <dt>@Html.DisplayNameFor(model => model.Address)</dt>
        <dd>@Html.TextBoxFor(m => m.Address) @Html.ValidationMessageFor(model => model.Address)</dd>

        <dt>@Html.DisplayNameFor(model => model.Gender)</dt>
        <dd>@Html.TextBoxFor(m => m.Gender) @Html.ValidationMessageFor(model => model.Gender)</dd>

        <dt>@Html.DisplayNameFor(model => model.Birthday)</dt>
        <dd>@Html.TextBoxFor(m => m.Birthday, "{0:dd/MM/yyyy}") @Html.ValidationMessageFor(model => model.Birthday, null, new { @class = "text-danger" })</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.TextBoxFor(m => m.Description) @Html.ValidationMessageFor(model => model.Description)</dd>
    </dl>

        <button type="submit" class="btn btn-secondary">Submit</button>
    }
</div>


