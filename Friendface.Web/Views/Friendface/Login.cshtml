@model Friendface.Web.Models.LoginModel

@{ 
    Layout = "_Layout";
}

<div class="container">
    <h3>Login</h3>
    <hr />

    @using (Html.BeginForm("Login", "Friendface", FormMethod.Post))
    {
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Username)</dt>
            <dd>@Html.TextBoxFor(m => m.Username) @Html.ValidationMessageFor(model => model.Username)</dd>

            <dt>@Html.DisplayNameFor(model => model.Password)</dt>
            <dd>@Html.PasswordFor(m => m.Password) @Html.ValidationMessageFor(model => model.Password)</dd>
        </dl>

        <button type="submit" class="btn btn-secondary" id="submit">Login</button>
    }

    <hr />
    <p>Don't have an account?</p>
    <a class="btn btn-secondary btn-sm" href="@Url.Action("RegisterUser")">Sign up</a>
</div>